<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
        <link rel="stylesheet" href="{{ asset("app.css") }}">
    </head>
    <body>
    {% block header %}
        <header class="sticky-top shadow-sm bg-white pl-md-3 pr-md-3">
            <nav class="navbar navbar-expand-lg navbar-expand-md navbar-light">
                <a class="navbar-brand d-flex align-items-center text-decoration-none text-primary" href="{{ path("admin_show_customers") }}">Vetux Line</a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto d-flex align-items-center text-center">
                        <li class="nav-item dropdown mr-4">
                            <a class="nav-link dropdown-toggle" href="#" title="Customers" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-users"></i>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item {% if current_page is defined and current_page == "admin_add_customers" %}active{% endif %}" href="{{ path("admin_add_customers") }}">Add customer(s)</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item {% if current_page is defined and current_page == "admin_show_customers" %}active{% endif %}" href="{{ path("admin_show_customers") }}">Show customer(s)</a>
                            </div>
                        </li>
                        <li class="nav-item mr-4">
                            <a class="nav-link" title="Merge" href="{{ path("admin_merge") }}" tabindex="-1" aria-disabled="true"><i class="far fa-object-ungroup"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" title="Customer(s) with invalid data" href="{{ path("admin_invalid_customers") }}" tabindex="-1" aria-disabled="true"><i class="fas fa-user-times"></i></a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto d-flex align-items-center text-center">
                        <li class="nav-item">
                            <a class="btn-sm btn-secondary" href="{{ path("security_logout") }}">Log out</a>
                        </li>
                    </ul>
                </div>
                <div class="dropdown">
                    <button class="navbar-toggler dropdown-toggle" type="button" data-toggle="dropdown" id="dropdownMenu" aria-expanded="false">
                        <i class="fas fa-bars"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-right text-center" aria-labelledby="dropdownMenu">
                        <li>
                            <a class="dropdown-item {% if current_page is defined and current_page == "admin_add_customers" %}active{% endif %}" href="{{ path("admin_add_customers") }}">Add customer(s)</a>
                        </li>
                        <hr>
                        <li>
                            <a class="dropdown-item {% if current_page is defined and current_page == "admin_show_customers" %}active{% endif %}" href="{{ path("admin_show_customers") }}">Show customer(s)</a>
                        </li>
                        <hr>
                        <li>
                            <a class="dropdown-item" href="{{ path("admin_merge") }}">Merge</a>
                        </li>
                        <hr>
                        <li>
                            <a class="dropdown-item" href="{{ path("admin_invalid_customers") }}">Invalid customer(s)</a>
                        </li>
                        <hr>
                        <li>
                            <a class="dropdown-item" href="{{ path("security_logout") }}">Log out</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
    {% endblock %}
        <main class="mt-5 mb-5">
            <div class="col-md-8 col-12 mx-auto">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success text-center" >{{ message }}</div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger text-center">{{ message }}</div>
                {% endfor %}
            </div>
            {% block main %}{% endblock %}
        </main>
        <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        <script src="{{ asset("app.js") }}"></script>
        {% block javascript %}{% endblock %}
    </body>
</html>
