{% extends 'base.html.twig' %}

{% block title %}SPARK-LINE | Log in{% endblock %}

{% block header %}
    <h2 class="mt-4 text-center"><a class="text-decoration-none" href="{{ path("security_login") }}">SPARK-LINE</a></h2>
{% endblock %}


{% block main %}
    <section class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger text-center card-panel red darken-2">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="mt-3">
                        <label for="inputUsername">Username</label>
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                    </div>
                    <div class="mt-3">
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" required>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </div>
                    <div class="text-center">
                        <button class="mt-3 btn btn-primary" type="submit">Log in</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
